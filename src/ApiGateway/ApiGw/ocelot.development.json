{
  "Routes": [
    //User Login
    {
      "DownstreamPathTemplate": "/User/Login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authentication.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Login",
      "UpstreamHttpMethod": [ "POST" ],
      "FileCacheOptions": { "TtlSeconds": 30 }
    },
    //User Register
    {
      "DownstreamPathTemplate": "/User/Register",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authentication.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Register",
      "UpstreamHttpMethod": [ "POST" ],
      "FileCacheOptions": { "TtlSeconds": 30 }
    },



    {
      "DownstreamPathTemplate": "/Tasks",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "tasks.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Tasks/GetAll",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/Tasks/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "tasks.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Tasks/{id}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/Tasks",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "tasks.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Tasks/",
      "UpstreamHttpMethod": [ "POST", "PUT" ]
    },



    {
      "DownstreamPathTemplate": "/Pomodoro/GetAll/{TaskId}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "pomodoros.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Pomodoro/GetAll/{TaskId}",
      "UpstreamHttpMethod": [ "GET" ]
    },

    {
      "DownstreamPathTemplate": "/Pomodoro/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "pomodoros.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Pomodoro/{id}",
      "UpstreamHttpMethod": [ "GET" ]
    },

    {
      "DownstreamPathTemplate": "/Pomodoro",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "pomodoros.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Pomodoro",
      "UpstreamHttpMethod": [ "POST","PUT" ]
    }



  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5110"
  }
}
